<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/sujet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Bowser"
        android:inputType="text" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choissisez la salle de réunion :"/>

    <RadioGroup


        android:id="@+id/radioGroup"

        android:layout_width="150dp"

        android:layout_height="123dp"


        android:checkedButton="@+id/radio"
        android:gravity="center"
        android:padding="3dip">


        <RadioButton

            android:id="@+id/radio"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="Réunion A" />

        <RadioButton

            android:id="@+id/radio2"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="Réunion B" />

        <RadioButton

            android:id="@+id/radio3"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="Réunion C" />


    </RadioGroup>


    <EditText
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/01/2019"
        android:layout_gravity="center"/>


    <EditText
        android:id="@+id/hourText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14h00"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ecrivez les noms des personnes conviées à la réunion séparé par des virgules sans espace :"/>

    <EditText
        android:id="@+id/textAdress"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Maxime,Alex" />


</LinearLayout>